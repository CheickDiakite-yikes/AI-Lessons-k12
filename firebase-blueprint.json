{
  "entities": {
    "User": {
      "title": "User",
      "description": "A registered user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The unique identifier of the user, matching their Firebase Auth UID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "role": {
          "type": "string",
          "enum": ["teacher", "admin", "student"],
          "description": "The user's role in the system."
        },
        "school": {
          "type": "string",
          "description": "The school the user is affiliated with."
        },
        "howDidYouHear": {
          "type": "string",
          "description": "How the user heard about the application."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user account was created."
        }
      },
      "required": ["uid", "email", "name", "role", "createdAt"]
    }
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profiles."
    }
  }
}
